{
  "fmt": {
    "files": {
      "exclude": [
        "node_modules/",
        "out/"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "node_modules/",
        "out/"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@18.2.0"
  },
  "importMap": "import_map.json",
  "tasks": {
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "lume": "deno eval \"import 'lume/task.ts'\" --"
  }
}
